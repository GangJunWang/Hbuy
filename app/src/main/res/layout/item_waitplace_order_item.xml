<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x10">
    <CheckBox
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/cb_select"
        android:layout_marginRight="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_toRightOf="@+id/cb_select"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="我是内容"
            android:textColor="@color/default_color"
            android:textSize="@dimen/x15"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/x6"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_name"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60" />
            <LinearLayout
                android:layout_marginLeft="@dimen/x8"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:text="我是价格"
                        android:layout_marginBottom="@dimen/x16"
                        android:id="@+id/tv_price"
                        android:textColor="@color/red_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_img"
                        android:background="@drawable/bg_left_and_right_angle_layout_place"
                        android:layout_marginRight="@dimen/x10"
                        android:textSize="@dimen/x12"
                        android:paddingTop="@dimen/x4"
                        android:paddingBottom="@dimen/x4"
                        android:paddingLeft="@dimen/x8"
                        android:paddingRight="@dimen/x8"
                        android:text="查看上称图"
                        android:textColor="#3c3c3c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_num"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/wuliu_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_marginLeft="@dimen/x4"
                        android:layout_marginRight="@dimen/x4"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/wuliu_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:singleLine="true"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/wuliu_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>