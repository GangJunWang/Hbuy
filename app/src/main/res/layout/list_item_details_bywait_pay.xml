<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/x10"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/page_bg" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:background="@drawable/bg_left_and_right_angle_layout_waitpay"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/tv_details"
            android:text="工单详情"
            android:textSize="@dimen/x13"
            android:textColor="@color/button_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center" />
    </RelativeLayout>
  <!--  <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/page_bg" />
    <TextView
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:text="运费详情" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/page_bg" />-->
    <LinearLayout
        android:paddingBottom="@dimen/x4"
        android:paddingTop="@dimen/x4"
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="承运物流" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x14"
            android:background="@color/page_bg" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="体积(cm3)" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x14"
            android:background="@color/page_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重量(kg)" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x14"
            android:background="@color/page_bg" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="运费(¥)" />
    </LinearLayout>

    <au.com.hbuy.aotong.view.NestFullListView
        android:id="@+id/cstFullShowListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<!--    <View
        android:layout_marginTop="@dimen/x4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/page_bg" />-->
    <LinearLayout
        android:paddingTop="@dimen/x4"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x4"
        android:weightSum="3">
        <TextView
            android:id="@+id/tv_shaibao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_daofu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_yunfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>