<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <TextView
        android:text="亲~您的包裹到达Hbuy我们会及时通知您哦!"
        android:gravity="center"
        android:layout_marginTop="@dimen/x16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/x14" />
    <RelativeLayout
        android:layout_marginTop="@dimen/x16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@drawable/add_pkg_angle_layout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/repo_title_hint"
            android:drawablePadding="@dimen/x5"
            android:gravity="center|left"
            android:paddingLeft="@dimen/x10"
            android:text="您的中转地址"
            android:textColor="@color/color_white"
            android:textSize="@dimen/x13" />
        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_left_and_right_angle_layout_repo_copy"
            android:paddingBottom="@dimen/x2"
            android:paddingLeft="@dimen/x6"
            android:paddingRight="@dimen/x6"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/x2"
            android:text="复制信息"
            android:layout_marginRight="@dimen/x12"
            android:textColor="@color/button_color"
            android:textSize="@dimen/x12"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="@dimen/x20"
        android:paddingBottom="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_left_and_right_angle_layout_repo_layout">
        <TextView
            android:text="姓 名 : 杨二傻"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:textColor="#666"
            android:textSize="@dimen/x14" />
        <TextView
            android:text="电 话 : 8788788787"
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:textColor="#666"
            android:textSize="@dimen/x14" />
        <TextView
            android:text="仓库地址 : 0000开放了打开了付款的00"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:textColor="#666"
            android:textSize="@dimen/x14" />
        <TextView
            android:text="邮 编 : 000000"
            android:id="@+id/tv_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:textColor="#666"
            android:textSize="@dimen/x14" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/x20"
        android:gravity="center"
        android:text="上拉, 了解转运物品小知识"
        android:drawablePadding="@dimen/x10"
        android:textSize="@dimen/x12"
        android:textColor="#e2e2e2"
        android:drawableTop="@drawable/repo_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>