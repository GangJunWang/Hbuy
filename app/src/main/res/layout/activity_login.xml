<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title_tab"
        style="@style/Page_RelativeLayout"
        android:background="@color/color_white">
        <TextView
            style="@style/Title_Text_Style"
            android:text="@string/bt_login"
            android:textColor="@color/default_color" />
    </RelativeLayout>

    <au.com.hbuy.aotong.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:paddingBottom="@dimen/x60"
                android:background="@drawable/login_bg_top"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <au.com.hbuy.aotong.view.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civ_img"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y10"
                android:clickable="true"
                android:src="@drawable/hbuy"
                app:border_color="#FFffffff"
                app:border_width="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bottom"
                android:background="@drawable/add_pkg_edit_layout_angle_login"
                android:layout_marginTop="@dimen/x90"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x24"
                android:layout_marginLeft="@dimen/x24"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:paddingLeft="@dimen/x24"
                    android:paddingTop="@dimen/x30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:layout_marginBottom="@dimen/y4"
                    android:textSize="@dimen/x14" />
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:orientation="horizontal">
                    <au.com.hbuy.aotong.view.ClearEditText
                        android:layout_alignParentLeft="true"
                        android:id="@+id/username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x34"
                        android:background="@null"
                        android:hint="@string/find_pwd_hint"
                        android:singleLine="true"
                        android:textSize="@dimen/x13"
                        android:textColor="#000"
                        android:textCursorDrawable="@null" />
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/username_hint" />
                </RelativeLayout>
                <View
                    android:layout_marginTop="@dimen/y4"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginRight="@dimen/x24"
                    android:layout_marginLeft="@dimen/x24"
                    android:background="#fdd1c7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1" />
                <TextView
                    android:id="@+id/tv_pwd"
                    android:paddingLeft="@dimen/x24"
                    android:paddingTop="@dimen/x10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textColor="#666"
                    android:layout_marginBottom="@dimen/y4"
                    android:textSize="@dimen/x14" />
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:orientation="horizontal">
                    <au.com.hbuy.aotong.view.ClearEditText
                        android:id="@+id/pwd_edit"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x13"
                        android:textColor="#000"
                        android:background="@null"
                        android:hint="@string/bound_hint_pwd"
                        android:layout_marginRight="@dimen/x34"
                        android:password="true"
                        android:textCursorDrawable="@null" />
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pwd_hint" />
                </RelativeLayout>
                <View
                    android:layout_marginTop="@dimen/y4"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginRight="@dimen/x24"
                    android:layout_marginLeft="@dimen/x24"
                    android:background="#fdd1c7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1" />
                <Button
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/x14"
                    android:id="@+id/bt_login"
                    android:textColor="@color/tab_bg"
                    android:background="@drawable/bg_left_and_right_angle_button_login"
                    android:stateListAnimator="@null"
                    android:text="@string/bt_login" />

                <Button
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginLeft="@dimen/x20"
                    android:id="@+id/iv_weixin"
                    style="@style/Bottom_Button_Weixin_Style"
                    android:layout_marginTop="@dimen/x10"
                    android:stateListAnimator="@null"
                    android:text="微信登录" />

                <RelativeLayout
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_to_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/tv_register"
                        android:autoLink="all"
                        android:textColor="#666"
                        android:textStyle="bold"
                        android:textSize="@dimen/x14" />

                    <TextView
                        android:id="@+id/tv_forget_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/tv_pwd"
                        android:autoLink="all"
                        android:textColor="#fe7a5e"
                        android:textStyle="bold"
                        android:textSize="@dimen/x14" />
                </RelativeLayout>
              <!--  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <View style="@style/Login_Parting_Line" />

                    <TextView
                        android:id="@+id/processhint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x6"
                        android:layout_marginRight="@dimen/x6"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/tv_weixin" />

                    <View style="@style/Login_Parting_Line" />
                </LinearLayout>-->
                <LinearLayout
                    android:layout_marginTop="@dimen/x20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <TextView
                        android:textSize="@dimen/x12"
                        android:textColor="#cccccc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="哎呀~程序老崩溃~登录注册不了啊！" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >
                        <TextView
                            android:textSize="@dimen/x12"
                            android:textColor="#cccccc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/diaowo_hint"
                            android:text="点我" />
                        <TextView
                            android:textSize="@dimen/x13"
                            android:id="@+id/tv_feedback"
                            android:textStyle="bold"
                            android:textColor="#fe7a5e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="反馈问题" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </au.com.hbuy.aotong.view.OverScrollView>
</LinearLayout>